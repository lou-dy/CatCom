<p id="notice"><%= notice %></p>

<div class="container">
  <div class="col-md-12">
    <h1 class="show-title"><%= @male_bettum.name %></h1>
    <div class="product-image col-md-6">
      <%= image_tag(@male_bettum.image_url, class: "img-responsive") %>
    </div>
    <div class="product-description col-md-6">
      <h3>Description</h3>
      <p><%= @male_bettum.description %></p>
      <table>
        <tr>
          <th><h4>Average Rating </h4> </th>
          <td><div class="rated" data-score="<%= @male_bettum.average_rating %>"></div></td>
        </tr>
        <tr>
          <th><h4>Color</h4> </th>
          <td><%= @male_bettum.color %></td>
        </tr>
        <tr>
          <th><h4>Tail Type</h4> </th>
          <td><%= @male_bettum.tail %></td>
        </tr>
        <tr>
          <th><h4>Pattern</h4> </th>
          <td><%= @male_bettum.pattern %></td>
        </tr>
      </table>

      <div class="show-button">
        <%= link_to raw("<span class='glyphicon glyphicon-edit'> <p> Edit </p> </span>"), edit_male_bettum_path(@male_bettum), class: "button btn btn-info" %>
        <%= link_to raw("<span class='glyphicon glyphicon-chevron-left'> <p> Back </p> </span>"), male_betta_path, class: "button btn btn-info" %>
      </div>

    </div>

    <div class="reviews">
      <%= render 'new_comment' %>
      <%= render 'comments' %>
      <div class="text-center">
        <%= will_paginate @comments %>
      </div>
    </div>

  </div>
</div>
