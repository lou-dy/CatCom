<% if signed_in? %>
  <h4>Add a review</h4>
  <%= form_for([@male_bettum, @male_bettum.comments.build]) do |f| %>
    <p>
      <div class="rating"> Rating: </div>
    </p>
    <p>
      <%= f.text_area :body %>
    </p>
    <p>
      <%= button_tag(type: 'submit', class: "button btn btn-info") do %>
        Submit <span class="glyphicon glyphicon-send"></span>
      <% end %>
    </p>
  <% end %>
<% end %>
