<div class="container">
  <h1> Orders </h1>
  <div class="row">
    <% @orders.each do |order| %>
      <div class="col-sm-12 col-md-6">
        <h3>
          Order # <%= order.id %>:
          <%= link_to order.male_bettum.name, order %>
        </h3>
        <p><%= order.male_bettum.description %></p>
        <p><strong><%= number_to_currency(order.male_bettum.price/100.to_f) %></strong></p>
      </div><!-- /col -->
    <% end %>
  </div>
</div>
