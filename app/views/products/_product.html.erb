<div class="col-xs-12 col-sm-6 col-md-4 product">
  <%= link_to image_tag(product.image_url, class: "img-responsive"), product %>
  <h3 class="pName"><%= link_to product.name, product %></h3>
  <p><%= product.copy %> </p>
  <hr>
  <p class="price">
    <strong> <%= number_to_currency(product.price) %> </strong>
  </p>
  <%= link_to 'Show', product %> | <%= link_to 'Edit', edit_product_path(product) %> | <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
</div>
